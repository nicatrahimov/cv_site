@model EntitiyLayer.Concrete.Feature

@{
    ViewBag.Title = "Update Feature";
    Layout = "_AdminLayout";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Update Feature</h3>
                </div>
                <div class="card-body">
                    <form action="/features/update" method="post">
                        <input type="hidden" asp-for="FeatureId" />
                        <div class="form-group">
                            <label asp-for="Header"></label>
                            <input asp-for="Header" class="form-control form-control-lg" required />
                            <span asp-validation-for="Header" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control form-control-lg" required/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control form-control-lg" required/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">UPDATE</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
