
@{
    ViewBag.Title = "Add Feature";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Add new <b>Feature</b></h3>
                </div>
                <div class="card-body">
                    <form action="/features/add" method="post">
                        <div class="form-group">
                            <label for="Title">Header</label>
                            <input type="text" class="form-control" id="Header" name="Header" placeholder="Enter feature header" required>
                        </div>
                        <div class="form-group">
                            <label for="Title">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter feature name" required>
                        </div>
                        <div class="form-group">
                            <label for="Value">Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter feature title" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">ADD</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

