@using EntitiyLayer.Concrete
@using System.Collections.Immutable
@model IImmutableList<Feature>
@{
ViewBag.Title = "Feature List";
Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header border-0">
            <h1 class="mb-0 text-center">Feature List</h1>
            @if (Model.Count == 0)
            { 
                <br>
            <a href="/features/add" class="btn btn-success ml-lg-auto">Insert new feature to database</a>
            }
            else
            {
            <p class="text-danger text-center">Only one feature is allowed. Please delete the existing feature before adding a new one.</p>
            }
        </div>
        <div class="card-body">
            @if (Model.Count > 0)
            {
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Header</th>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>@Model[0].FeatureId</td>
                    <td>@Model[0].Header</td>
                    <td>@Model[0].Name</td>
                    <td>@Model[0].Title</td>
                    <td>
                        <a href="/features/update/@Model[0].FeatureId" class="btn btn-warning">Update</a>
                    </td>
                    <td>
                        <a href="/features/delete/@Model[0].FeatureId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                </tbody>
            </table>
            }
            else
            {
            <p class="text-center">No features found. Please add a new feature.</p>
            }
        </div>
    </div>
</div>
