@model BusinessLayer.Models.Contacts.AddContactModel

@{
    ViewBag.Title = "Add Contact";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Add new <b>Contact</b></h3>
                </div>
                <div class="card-body">
                    <form action="/contacts/add" method="post">
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter contact Title" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail">Mail address</label>
                            <input asp-for="Mail" type="email" class="form-control" placeholder="Enter contact mail" required>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">Phone number</label>
                            <input asp-for="Phone" type="tel" class="form-control" placeholder="Enter contact phone number" required>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">ADD</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
