@using BusinessLayer.Models.Testimonials
@using System.Collections.Immutable
@model IImmutableList<GetTestimonialModel>
<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Client Testimonials</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12" data-aos="fade-right" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Comment</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@item.ClientName</div>
                            <div class="text-small">@item.CompanyName</div>
                        </div>
                        @if(item.Image != null && item.Image.Length > 0)
                        {
                        string imageBase64 = Convert.ToBase64String(item.Image);
                        string imageSrc = $"data:image/png;base64,{imageBase64}";
                        <img class="me-md-3 rounded" src="@imageSrc" width="96" height="96" alt="client 1"/>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

