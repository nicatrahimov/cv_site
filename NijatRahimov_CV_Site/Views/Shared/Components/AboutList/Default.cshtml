@using BusinessLayer.Models.About
@using System.Collections.Immutable
@model IImmutableList<GetAboutModel>
<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow">
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-6">
                <h2 class="h4 my-2">@item.Title</h2>
                <p>@item.Description</p>
                <div class="row mt-3">
                    <div class="col-sm-2">
                        <div class="pb-1">Age:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.Age</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">Email:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.Mail</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">Phone:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.Phone</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">Address:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@item.Address</div>
                    </div>
                </div>
            </div>
            <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100">
                @if(item.Image != null && item.Image.Length > 0){
                    string imageBase64 = Convert.ToBase64String(item.Image);
                    string imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img class="avatar img-fluid mt-2" src="@imageSrc" width="400" height="400" alt="Image">
                }
            </div>
            }
        </div>
    </div>
</div>