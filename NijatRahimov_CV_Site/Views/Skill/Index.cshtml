@using EntitiyLayer.Concrete
@using System.Collections.Immutable
@model IImmutableList<Skill>
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="card">
<div class="card-header border-0">
    <h1 class="mb-0 text-center ">Skill List</h1>
    <br/>
    <a href="/skills/add" class="btn btn-success ml-lg-auto ">Insert new skill to database</a>
</div>
@if(Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Value</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SkillId</td>
                <td>@item.Title</td>
                <td>
                    <div class="py-1">
                        <div class="d-flex text-small fw-bolder"><span class="me-auto"></span><span>@item.Value%</span></div>
                        <div class="progress my-1" style="height: 1rem;width: 15rem;">
                            <div class="progress-bar bg-gradient-green" role="progressbar" data-aos="zoom-in-right" data-aos-delay="300" data-aos-anchor=".skills-section" style="width: @item.Value%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </td>
                <td><a href="/skills/update/@item.SkillId" class="btn btn-warning">Update</a></td>
                <td><a href="/skills/delete/@item.SkillId" class="btn btn-danger">Delete</a></td>
            </tr>  
        }
    </table>
}else
{
    <p class="text-center">No skills found. Please add a new skill.</p>
}
    </div>
</div>

