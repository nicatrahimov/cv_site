@{
    ViewBag.Title = "Add Skill";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Add new <b>Skill</b></h3>
                </div>
                <div class="card-body">
                    <form action="/skills/add" method="post">
                        <div class="form-group">
                            <label for="Title">Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter skill title" required>
                        </div>
                        <div class="form-group">
                            <label for="Value">Value</label>
                            <input type="number" class="form-control" id="Value" name="Value" placeholder="Enter skill value" required max="100" min="0">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">ADD</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
