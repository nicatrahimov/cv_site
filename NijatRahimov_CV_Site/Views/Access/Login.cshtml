@model BusinessLayer.Models.Auth.User;
@{
Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Login"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Adjust max-width as needed */
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .form-group label {
            margin-bottom: 0.5rem;
        }
        .form-group input {
            padding: 0.5rem;
        }
        .form-group button {
            padding: 0.75rem;
            background-color: #007bff;
            border: none;
            color: white;
            cursor: pointer;
        }
        .form-group button:hover {
            background-color: #0056b3;
        }
        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
<div class="container">
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1 class="mb-4">Login</h1>

        <div class="mb-3">
            <label for="Username" class="form-label">Email</label>
            <input type="text" class="form-control" id="Username" placeholder="Enter your email" asp-for="Username">
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" placeholder="Enter your password" asp-for="Password">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="KeepLoggedIn" asp-for="KeepLoggedIn">
            <label class="form-check-label" for="KeepLoggedIn">Keep Logged In</label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
        <div class="mt-3 text-danger">@ViewData["ValidateMessage"]</div>
        }
    </form>
</div>

<!-- Bootstrap JS (Optional for some features like dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
